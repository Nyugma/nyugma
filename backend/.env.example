# Legal Case Similarity Web Application - Environment Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Development/Production Mode
# Set to "false" for production to disable auto-reload
RELOAD=true

# Logging Configuration
# Options: debug, info, warning, error, critical
LOG_LEVEL=info

# Worker Configuration (Production)
# Number of worker processes for handling requests
# Recommended: (2 Ã— CPU cores) + 1
# Leave empty to auto-calculate based on CPU cores
WORKERS=

# Access Logging (Production)
# Set to "true" to enable detailed access logs
# Recommended: false for production (better performance)
ACCESS_LOG=false

# Application Settings
# Maximum file upload size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Number of similar cases to return in search results
DEFAULT_RESULTS_COUNT=10

# Data Paths
DATA_DIR=data
CASES_DIR=data/cases
VECTORS_DIR=data/vectors
LOGS_DIR=logs

# Legal Vocabulary Configuration
LEGAL_VOCABULARY_PATH=data/legal_vocabulary.json
CASES_METADATA_PATH=data/cases_metadata.json

# Vectorizer Model Configuration
VECTORIZER_MODEL_PATH=data/models/legal_vectorizer.pkl

# Performance Monitoring
# Enable performance tracking and metrics collection
ENABLE_PERFORMANCE_MONITORING=true

# CORS Configuration
# Comma-separated list of allowed origins for cross-origin requests
# Development: Use "*" to allow all origins (default)
# Production: Specify exact frontend domain(s), e.g., "https://your-frontend.netlify.app,https://your-frontend.vercel.app"
# Examples:
#   Development: CORS_ORIGINS=*
#   Production: CORS_ORIGINS=https://your-frontend.netlify.app
#   Multiple origins: CORS_ORIGINS=https://frontend1.com,https://frontend2.com
CORS_ORIGINS=*

# Frontend URL Configuration
# URL where the frontend application is deployed
# Used in API root endpoint response to provide frontend link
# Development: Use localhost URL (e.g., http://localhost:3000)
# Production: Use deployed frontend domain (e.g., https://your-frontend.netlify.app)
# Examples:
#   Development: FRONTEND_URL=http://localhost:3000
#   Production: FRONTEND_URL=https://your-frontend.netlify.app
# Note: This should match one of the origins in CORS_ORIGINS
FRONTEND_URL=http://localhost:3000

# Security Settings (Production)
# Enable these for production deployments
ENABLE_RATE_LIMITING=false
RATE_LIMIT_PER_MINUTE=60

# Database/Storage Settings
MAX_REPOSITORY_SIZE=1000

# NLTK Data Path (optional)
# Uncomment and set if NLTK data is in a custom location
# NLTK_DATA=/path/to/nltk_data

# Proxy Configuration (if behind reverse proxy)
# PROXY_HEADERS=true
# FORWARDED_ALLOW_IPS=*

# SSL/TLS Configuration (if using HTTPS)
# SSL_KEYFILE=/path/to/key.pem
# SSL_CERTFILE=/path/to/cert.pem

# Monitoring and Alerting
# SENTRY_DSN=
# DATADOG_API_KEY=

# Backup Configuration
# BACKUP_DIR=/path/to/backups
# BACKUP_RETENTION_DAYS=30
